// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  id      Int     @id @default(autoincrement())
  email   String  @unique
  username String  @unique
  password String

  recipes RecipeUser[]
  ratings Rating[]

  @@map("users")
}


model Recipe {
  id       Int      @id @default(autoincrement())
  name     String
  // other recipe fields...

  ratings  Rating[]
  users    RecipeUser[]

  @@map("recipes")
}

model RecipeUser {
  userId   Int
  recipeId Int
  user     User     @relation(fields: [userId], references: [id])
  recipe   Recipe   @relation(fields: [recipeId], references: [id])

  @@id([userId, recipeId])
  @@map("recipes_users")
}

model Rating {
  value    Float
  userId   Int
  recipeId Int

  user   User   @relation(fields: [userId], references: [id])
  recipe Recipe @relation(fields: [recipeId], references: [id])

  @@id([userId, recipeId])
  @@map("ratings")
}


